      "counter-reset",
      "counter-increment",
      "resize",
      "touch-action",
      "will-change",
      "zoom",
      "fill",
      "fill-rule",
      "clip-rule",
      "stroke",
      "perspective",
      "perspective-origin",
      "box-decoration-break",
      "page-break-after",
      "page-break-before",
      "page-break-inside"
    ]
  }
}
